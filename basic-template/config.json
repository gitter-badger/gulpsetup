{
  "server": {
    "livereload": 35728,

    "development": {
      "src":  "../dev",
      "server": {
        "baseDir": ["../app"]
      },
      "port"    : 9999,
      "open"    : false,
      "notify"  : false,
      "paths"   : {
        "production" : "../app",
        "assets": "assets"
      },

      "files": [
      "/css/*.css",
      "/js/*.js",
      "/images/**",
      "/fonts/*"
      ]
    }
  }

  ,"jade": {
    "src":  "../dev/jade/*.jade",
    "dest": "../app"
  }

  ,"sass": {

    "src":  "../dev/sass/*.{sass,scss}",
    "dest": "../app/_assets/css",
    "options": {
      "noCache": true,
      "compass": false,
      "bundleExec": false,
      "sourcemap": true,
      "sourcemapPath": "./maps"
    }
  }
}
